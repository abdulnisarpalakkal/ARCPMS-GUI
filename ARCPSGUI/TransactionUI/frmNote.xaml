<Window x:Class="ARCPSGUI.TransactionUI.frmNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  Background="#FFD8D8D8" 
        Title="Note" Height="200" Width="381" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="212*" />
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Stretch" Name="txtNote" VerticalAlignment="Stretch" Background="#FFF5F5EC" Grid.ColumnSpan="2" Text="" AcceptsReturn="True" TextWrapping="Wrap" AutoWordSelection="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <Button Content="Save" Grid.Row="2" HorizontalAlignment="Right" Margin="218,2,0,0" Name="btnSave" 
                VerticalAlignment="Top" Width="80" Template="{DynamicResource GlassButton}" Height="28" Click="btnSave_Click" />
    </Grid>
</Window>
