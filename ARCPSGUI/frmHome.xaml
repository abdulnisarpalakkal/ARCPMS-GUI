        <Label Content="lblToday" Grid.Column="1" Grid.Row="2" Height="21" HorizontalAlignment="Right" Name="lblToday" VerticalAlignment="Top" Width="135" Foreground="White" Visibility="Visible" Margin="0,0,2,0" />


